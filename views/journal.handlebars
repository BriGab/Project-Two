<div class="container rel-main mx-2">
    <div class="row">
        <div class="col s12 ab-main">
            <form id="journal">
                <div class="form-group">
                    <textarea style="border:none" placeholder="Title" class="form-control txta" id="title"></textarea>
                    <textarea style="border:none" placeholder="Write something here..." class="form-control txta"
                        rows="20" id="body"></textarea>
                    <center>
                        <button data-authid="{{id}}" type="submit"
                            class="waves-effect waves-light btn-large blue-grey darken-1 submit">Submit</button>
                    </center>
                </div>
            </form>
        </div>
    </div>
</div>
<canvas id="canvas-basic"></canvas>
<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>How are you feeling today?</h4>
        <p>Set your mood and choose a color theme</p>
        <div class="py3">
            <div class="input-field">
                <select id="select-mood">
                    <option value="default" disabled selected>Tell us how you're feeling</option>
                    <option value="Happy">Happy</option>
                    <option value="Sad">Sad</option>
                    <option value="Angry">Angry</option>
                </select>
                <label>Mood</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" id="mood" class="modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>
</div>