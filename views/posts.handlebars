<nav>
    <div class="nav-wrapper">
        <ul id="nav-mobile" class="right">
            <li><a class="journal-link" href="/{{username}}/journal">Journal</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>
</nav>
<div class="container rel-main mx-2">
    <div class="row">
        <div class="col s12">
            <h1>{{name}}'s blog</h1>
            <ul class="post-group">
                {{#each post}}
                {{> posts-block}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div id="modal2" class="modal">
    <div class="modal-content">
        <input class="post-title" placeholder="Note Title" maxlength="28" type="text">
        <textarea class="post-textarea" placeholder="Note Text"></textarea>
        <div class="py3">
            <div class="input-field">
                <select id="select-mood" name="mood-options">
                    <option value="default" disabled>Feelings</option>
                    <option data-num="Happy" value="1">Happy</option>
                    <option data-num="Sad" value="2">Sad</option>
                    <option data-num="Angry" value="3">Angry</option>
                </select>
                <label>Mood</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" id="mood" class="modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>
</div>